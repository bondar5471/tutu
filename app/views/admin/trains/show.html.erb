<p id="notice"><%= notice %></p>

<p>
  <strong>Номер:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>Станция:</strong>
  <% if @train.current_station.present?  %>
    <%= @train.current_station.title %>
  <% else %>
    Нет станции
  <% end %>
</p>

<p>
  <strong>Путь</strong>
  <% if @train.route.present?  %>
    <%= @train.route.name %>
  <% else %>
    Нет пути
  <% end %>
</p>

<div>
  <strong>Вагоны</strong>
  <% if @train.order_carriage %>
    <p><strong>С головы</strong></p>
  <% else %>
    <p><strong>С Хвоста</strong></p>
  <% end %>
  <% if @train.carriages.present?  %>
    <table>
      <thead>
      <tr>
        <th>#</th>
        <th>Тип</th>
        <th>Верхние</th>
        <th>Нижние</th>
        <th>Номер</th>
      </tr>
      </thead>
      <tbody>
        <% @train.carriages.each do |carriage| %>
          <tr>
            <td><%= carriage.id %></td>
            <td><%= carriage.type %></td>
            <td><%= carriage.top_seats %></td>
            <td><%= carriage.bottom_seats %></td>
            <td><%= link_to "#{carriage.number}", admin_carriage_path(carriage) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  <% else %>
    Don`t know
  <% end %>
</div>

<%= link_to 'Создать вагон', new_admin_train_carriage_path(@train) %>
<%= link_to 'Изменить', edit_admin_train_path(@train) %>
<%= link_to 'Назад', admin_trains_path %>