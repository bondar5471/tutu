<p id="notice"><%= notice %></p>

<p><strong><%= @carriage.type %></strong></p>

<p>
  <strong>Номер:</strong>
  <%= @carriage.number %>
</p>

<% if @carriage.top_seats %>
  <p>
    <strong>Верхние места</strong>
    <%= @carriage.top_seats %>
  </p>
<% end %>

<% if @carriage.bottom_seats %>
  <p>
    <strong>Нижние места</strong>
    <%= @carriage.bottom_seats %>
  </p>
<% end %>

<% if @carriage.side_top_seats %>
  <p>
    <strong>Боковые Верхние </strong>
    <%= @carriage.side_top_seats %>
  </p>
<% end %>

<% if @carriage.side_bottom_seats %>
  <p>
    <strong>Боковые Нижние</strong>
    <%= @carriage.side_bottom_seats %>
  </p>
<% end %>

<% if @carriage.econom_seats %>
  <p>
    <strong>Сидячие</strong>
    <%= @carriage.econom_seats %>
  </p>
<% end %>

<%= link_to 'Back', train_path(@carriage.train) %>