<p id="notice"><%= notice %></p>

<p>
  <strong>Название:</strong>
  <%= @route.name %>
</p>
<p>
  <strong>Станции в маршруте:</strong> 
</p>
<p>
  <% if @route.railway_stations.empty? %>
   Список пуст
  <% else %>
  <ul>
    <% @route.railway_stations.ordered.each do |station| %>
      <li>
        <p> <strong><%= station.title %></strong>
          <%= form_tag update_position_railway_station_path(station), method: :patch do %>
              <%= hidden_field_tag :route_id, @route.id %>
              <%= label_tag :station_index %>
              <%= number_field_tag :station_index, station.index(@route.id) %>
              <%= submit_tag 'Save' %>
          <% end %>
        </p>
        <p>
          <%= form_tag update_time_railway_station_path(station), method: :patch do %>
            <%= hidden_field_tag :route_id, @route.id %>
            <%= label_tag :arrive_time %>
            <%= datetime_field_tag :arrive_time, station.arrive_time(@route.id) %>
            <%= label_tag :outgo_time %>
            <%= datetime_field_tag :outgo_time, station.outgo_time(@route.id) %>
            <%= submit_tag 'Save' %>
          <% end %>
        </p>
      </li>
    <% end %>
  </ul>
<% end %>
</p>
<p>
  <strong>Поезда на маршруте:</strong>
</p>
<p>
  <% if @route.trains.empty? %>
      Список пуст
  <% else %>
    <ul>
      <% @route.trains.each do |train| %>
          <li><%= train.number %></li>
      <% end %>
    </ul>
<% end %>
</p>

<%= link_to 'Изменить', edit_route_path(@route) %> |
<%= link_to 'Назад', routes_path %>
