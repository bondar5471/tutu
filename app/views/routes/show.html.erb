<p id="notice"><%= notice %></p>

<p>
  <strong>Название:</strong>
  <%= @route.name %>
</p>
<p>
  <strong>Станции в маршруте:</strong> 
</p>
<p>
  <% if @route.railway_stations.empty? %>
   Список пуст
  <% else %>
  <table>
      <thead>
      <tr>
      <td width="100px">Название</td>
      <td>Позицыя</td>
    </tr>
    </thead>
    <tbody>
      <% @route.railway_stations.each do |station| %>
        <tr>
          <td><%= station.title %></td>
        </tr>
        <% end %> 
    </tbody>
    </table>
    <% end %>
  </p> 
  <strong>Поезда на маршруте:</strong>
</p>
<p>
  <% if @route.trains.empty? %>
      Список пуст
  <% else %>
    <ul>
      <% @route.trains.each do |train| %>
          <li><%= train.number %></li>
      <% end %>
    </ul>
<% end %>
</p>

<%= link_to 'Изменить', edit_route_path(@route) %> |
<%= link_to 'Назад', routes_path %>
