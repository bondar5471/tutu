<h1>Результат поиска</h1>
<h2>Путь</h2>
<ul>
  <% @routes.each do |route| %>
    <li>
      <strong> Путь <%= route.id %></strong>
      <p>Время отправления <%= @start_station.outgo_time(route) %></p>
      <p>Время прибытия <%= @end_station.arrive_time(route) %></p>
      <h3>Поезд</h3>
      <ul>
        <% route.trains.each do |train| %>
          <li>
            <p><%= train.number %></p>
            <p><%= link_to 'Купить билет', new_train_ticket_path(train, base_station: @start_station.id, end_station: @end_station.id) %></p>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
